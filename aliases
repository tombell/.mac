#!/usr/bin/env bash

alias l="ls -lAh"
alias ll="ls -al"
alias la="ls -A"

alias e="$VISUAL"

# pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# make sure vim runs neovim
alias vim="nvim"

# easier transmission usage
alias tx="transmission-remote"

# homebrew
alias bl="brew list -1"
alias blc="brew list -1 --cask"
alias bcu="brew cleanup -s"
alias bu="brew upgrade"
